{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./", // Where your source code lives
    "outDir": "./build", // Where compiled JS should go
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts"], // Files to compile (usually your TS files)
  "exclude": ["node_modules", "build"] // Folders you DON'T want to compile
}
